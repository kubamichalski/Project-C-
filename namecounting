#include <iostream>
#include <windows.h>

using namespace std;

string imie; int liczba;

int main()
{
    cout << "Podaj swoje imie: " << endl;
    cin >> imie;
    cout << "podaj ile razy ma sie wyswietlic liczba calkowita:";
    cin >> liczba;

    for (int i=1;i<=liczba;i++)
    {
        Sleep(1000);
        cout <<i<<". "<< imie << endl;
    }


    return 0;
}
